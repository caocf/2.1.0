<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="60dp"
                android:orientation="vertical" >
                
				<!-- 用户头信息 -->
                <LinearLayout
                    android:id="@+id/menu_header"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="left|center"
                    android:orientation="horizontal" >

                    <com.mysteel.banksteel.view.ui.CircleImageView
                        android:id="@+id/circleimageview"
                        android:layout_width="55dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:id="@+id/layout_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center|left"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="朝花夕拾"
                            android:textColor="#ffffff"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 我的积分 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/integral" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_menu_integral"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="我的积分"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/main_item_font_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:gravity="center|right"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/right_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 邀请好友 -->

                <LinearLayout
                    android:id="@+id/ll_invite"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/friend" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_menu_invite"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="邀请好友"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/main_item_font_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/right_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 消息中心 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/message" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_menu_message"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="消息中心"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/main_item_font_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/right_arrow" />
                    </LinearLayout>
                </LinearLayout>

               <!--  <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#c9c9c9" /> -->

                <!-- 设置 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/setting" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/menu_setting"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="设置"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/main_item_font_size" />
                    
                    <View
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5" />
    </LinearLayout>

</RelativeLayout>