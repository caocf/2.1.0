<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_huanxin_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:tag="Bottom9">

        <LinearLayout
            android:id="@+id/ll_item_phone"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:background="#FF5556"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/item_phone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="拨打电话"
                android:textColor="@color/font_white_one"
                android:textSize="12sp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_item_msg"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:background="#FC6C64"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/img_shejiao"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/item_msg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="在线沟通"
                android:textColor="@color/font_white_one"
                android:textSize="12sp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>