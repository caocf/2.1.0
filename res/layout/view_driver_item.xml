<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="司机姓名:"
            android:textSize="15sp"
            android:textColor="@color/font_black_two"
            />

        <EditText
            android:id="@+id/et_drive_name"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/box_gray_right_angle"
            android:layout_marginLeft="10dp"
            android:maxLength="10"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="手机:"
            android:textSize="15sp"
            android:textColor="@color/font_black_two"
            />

        <EditText
            android:id="@+id/et_drive_phone"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/box_gray_right_angle"
            android:layout_marginLeft="10dp"
            android:maxLength="11"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/font_black_two"
            android:text="车牌号:"
            />

        <EditText
            android:id="@+id/et_drive_licenseplate"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/box_gray_right_angle"
            android:layout_marginLeft="10dp"
            android:maxLength="11"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/font_black_two"
        />



</LinearLayout>