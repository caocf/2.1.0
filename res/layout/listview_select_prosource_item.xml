<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="40dp" >

    <ImageView 
        android:id="@+id/rb_prosource_item_check"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/unchoose_goods"
        
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <!-- 分类 -->

            <TextView
                android:id="@+id/tv_prosource_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
            <!-- 规格 -->

            <TextView
                android:id="@+id/tv_prosource_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textSize="16sp" />
            <!-- 城市 -->

            <TextView
                android:id="@+id/tv_prosource_item_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <!-- 品牌数量 -->

            <TextView
                android:id="@+id/tv_prosource_item_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
            <!-- 价格 -->

            <TextView
                android:id="@+id/tv_prosource_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#FC4749"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <!-- 地址 -->

            <TextView
                android:id="@+id/tv_prosource_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#D2D2D2"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/im_prosource_item_phone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:src="@drawable/phone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>