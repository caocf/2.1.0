<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/font_white_one"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="您确定要取消本次求购?"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/btn_continuebuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_green_one"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="继续求购"
            android:textColor="@color/font_white_one"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_canclebuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/bg_red_one"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="去意已决"
            android:textColor="@color/font_white_one"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>