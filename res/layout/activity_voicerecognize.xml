<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/font_white_one"
              android:orientation="vertical"
              android:fitsSystemWindows="true">

   <include layout="@layout/head_common_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="你发布的找货需求"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/et_orderdemand"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/settextview"
        android:gravity="top"
        android:padding="10dp"
        android:textColor="@color/font_black_two"/>

    <RelativeLayout
        android:id="@+id/re_listen_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/findfood">

        <LinearLayout
            android:id="@+id/ll_repeatListen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"
                android:src="@drawable/voice_repeat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="再听一次"
                android:textColor="@color/font_white_one"
                android:textSize="22sp"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="联系电话"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/settextview"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/font_black_one"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_voiceidentfy"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="提示: 您的求购正在解析中,请稍等!"
        android:textColor="@color/font_black_two"
        android:textSize="16sp"/>

</LinearLayout>