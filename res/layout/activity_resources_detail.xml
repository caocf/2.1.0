<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
				android:fitsSystemWindows="true">

    <include
        android:id="@+id/include_layout"
        layout="@layout/head_common_layout"/>
    
    <LinearLayout 
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_layout"
        android:orientation="vertical"
		android:background="@color/font_white_one"
        >
        		<!-- 第一排-->
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="40dp"
			        android:orientation="horizontal">
			
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1.5"
			            android:orientation="horizontal">
			
			            <TextView
			                android:layout_width="60dp"
			                android:layout_height="match_parent"
			                android:gravity="center_vertical|left"
			                android:paddingLeft="10dp"
			                android:paddingStart="10dp"
			                android:paddingRight="0dp"
			                android:paddingEnd="0dp"
			                android:text="品名:"
			                android:textColor="@color/main_font_gray"
			                android:textSize="13sp"/>
			
			            <!-- 品名 -->
			            <TextView
			                android:id="@+id/tv_partname"
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:layout_marginLeft="3dp"
			                android:gravity="center_vertical"
			                android:textColor="@color/font_black_one"
			                android:textSize="15sp"/>
			
			        </LinearLayout>
			
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1">
			
			
			            <TextView
			                android:layout_width="70dp"
			                android:layout_height="match_parent"
			                android:gravity="center_vertical|right"
			                android:text="规格:"
			                android:textColor="@color/main_font_gray"
			                android:textSize="13sp"/>
			
			            <!-- 规格 -->
			            <TextView
			                android:id="@+id/tv_spec"
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:layout_marginLeft="3dp"
			                android:gravity="center_vertical"
			                android:textColor="@color/font_black_one"
			                android:textSize="15sp"/>
			        </LinearLayout>
			
			    </LinearLayout>
			
			    <!-- 第三排-->
			
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="40dp"
			        android:orientation="horizontal">
			
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1.5"
			            android:orientation="horizontal">
			
			            <TextView
			                android:layout_width="60dp"
			                android:layout_height="match_parent"
			                android:gravity="center_vertical|left"
			                android:paddingLeft="10dp"
			                android:paddingStart="10dp"
			                android:paddingRight="0dp"
			                android:paddingEnd="0dp"
			                android:text="材质:"
			                android:textColor="@color/main_font_gray"
			                android:textSize="13sp"/>
			
			            <!-- 材质 -->
			            <TextView
			                android:id="@+id/tv_material"
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:layout_marginLeft="3dp"
			                android:gravity="center_vertical"
			                android:textColor="@color/font_black_one"
			                android:textSize="15sp"/>
			
			        </LinearLayout>
			
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1">
			
			
			            <TextView
			                android:layout_width="70dp"
			                android:layout_height="match_parent"
			                android:gravity="center_vertical|right"
			                android:text="品牌/产地:"
			                android:textColor="@color/main_font_gray"
			                android:textSize="13sp"/>
			
			            <!-- 品牌产地 -->
			            <TextView
			                android:id="@+id/tv_origin"
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:layout_marginLeft="3dp"
			                android:gravity="center_vertical"
			                android:textColor="@color/font_black_one"
			                android:textSize="15sp"/>
			        </LinearLayout>
			
			    </LinearLayout>
			
			    <!-- 第三排-->
			
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="40dp"
			        android:orientation="horizontal">
			
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1.5"
			            android:orientation="horizontal">
			
			            <TextView
			                android:layout_width="60dp"
			                android:layout_height="match_parent"
			                android:gravity="center_vertical|left"
			                android:paddingLeft="10dp"
			                android:paddingStart="10dp"
			                android:paddingRight="0dp"
			                android:paddingEnd="0dp"
			                android:text="仓库:"
			                android:textColor="@color/main_font_gray"
			                android:textSize="13sp"/>
			
			            <!-- 交货地 -->
			            <TextView
			                android:id="@+id/tv_delivery"
			                android:layout_width="80dp"
			                android:layout_height="match_parent"
			                android:layout_marginLeft="3dp"
			                android:gravity="center_vertical"
			                android:textColor="@color/font_black_one"
			                android:textSize="15sp"/>
						<ImageView
							android:id="@+id/iv_transport"
			                android:layout_width="30dp"
			                android:layout_height="30dp"
			                android:layout_marginLeft="15dp"
						    android:src="@drawable/qiche"
						    />
			            
			            
			        </LinearLayout>
			
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1">
			
			
			            <TextView
			                android:layout_width="70dp"
			                android:layout_height="match_parent"
			                android:gravity="center_vertical|right"
			                android:text="存货城市:"
			                android:textColor="@color/main_font_gray"
			                android:textSize="13sp"/>
			
			            <!-- 求购数量 -->
			            <TextView
			                android:id="@+id/tv_number"
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:layout_marginLeft="3dp"
			                android:gravity="center_vertical"
			                android:textColor="@color/font_black_one"
			                android:textSize="15sp"/>
			        </LinearLayout>
			
			    </LinearLayout>
			
			    <!-- 第四排-->
			
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="40dp"
			        android:orientation="horizontal"
					android:gravity="center"
					>
			
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1.5"
			            android:orientation="horizontal">
			
			            <TextView
			                android:layout_width="60dp"
			                android:layout_height="match_parent"
			                android:gravity="center_vertical|left"
			                android:paddingLeft="10dp"
			                android:paddingStart="10dp"
			                android:paddingRight="0dp"
			                android:paddingEnd="0dp"
			                android:text="当前价:"
			                android:textColor="@color/main_font_gray"
			                android:textSize="13sp"/>
			
			            <!-- 当前价 -->
			            <TextView
			                android:id="@+id/tv_curjiage"
			                android:layout_width="wrap_content"
			                android:layout_height="match_parent"
			                android:layout_marginLeft="3dp"
			                android:gravity="center_vertical"
			                android:singleLine="true"
			                android:textColor="@color/main_imred"
			                android:textSize="20sp"/>
			            
			            <TextView
							android:id="@+id/tv_jiage_unit"
			                android:layout_width="wrap_content"
			                android:layout_height="match_parent"
			                android:layout_marginLeft="3dp"
			                android:gravity="center_vertical"
			                android:singleLine="true"
			                android:text="元/吨"
			                android:textColor="@color/font_black_one"
			                android:textSize="13sp"/>
			            
			        </LinearLayout>
			
			        <LinearLayout
						android:id="@+id/ll_minprice"
			            android:layout_width="0dp"
			            android:layout_height="30dp"
			            android:layout_weight="1"
			            android:background="@drawable/biankuang"
						android:gravity="center"
			            android:layout_marginRight="10dp"
			            android:orientation="horizontal">
			
			            <TextView
			                android:layout_width="wrap_content"
			                android:layout_height="match_parent"
			                android:gravity="center_vertical|left"
			                android:paddingLeft="5dp"
			                android:paddingStart="10dp"
			                android:paddingRight="0dp"
			                android:paddingEnd="0dp"
			                android:text="最低价:"
			                android:textColor="@color/main_font_gray"
			                android:textSize="13sp"/>
			
			            <!-- 最低价 -->
			            <TextView
			                android:id="@+id/tv_lowjiage"
			                android:layout_width="wrap_content"
			                android:layout_height="match_parent"
			                android:layout_marginLeft="3dp"
			                android:gravity="center_vertical"
			                android:singleLine="true"
			                android:text="4200"
			                android:textColor="@color/main_imred"
			                android:textSize="18sp"/>
			            
			            <TextView
			                android:layout_width="wrap_content"
			                android:layout_height="match_parent"
			                android:layout_marginLeft="3dp"
			                android:gravity="center_vertical"
			                android:singleLine="true"
			                android:text="元/吨"
			                android:textColor="@color/font_black_one"
			                android:textSize="13sp"/>
			
			        </LinearLayout>
			
			    </LinearLayout>
        
        
    </LinearLayout>
    
    
    
     <!-- 头部切换 -->
    <LinearLayout
        android:id="@+id/ll_qiehuan_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_head"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_huozhu_fd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_huozhu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/current_down"
                android:gravity="center"
                android:text="货主"
                android:textColor="@color/main_imred"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_chart_fd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_up"
                android:gravity="center"
                android:text="走势图"
                android:textColor="@color/main_font_gray"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/ll_qiehuan_layout"/>
    
     <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_qiandingdan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
				android:layout_marginLeft="30dp"
				android:layout_marginRight="30dp"
                android:background="@drawable/findfood"
                android:gravity="center"
                android:text="签订意向订单"
                android:textColor="@color/font_white_one"
                android:textSize="18sp"/>

    </LinearLayout>

	<ProgressBar
		android:id="@+id/pb_progressbar"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_centerInParent="true"
		android:visibility="gone" />
    


</RelativeLayout>
