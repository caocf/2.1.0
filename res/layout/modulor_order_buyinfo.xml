<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rl_layout_left"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- android:background="@color/font_white_one"-->

    <!-- 第一排-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:text="品名:"
                android:textColor="@color/main_font_gray"
                android:textSize="13sp"/>

            <!-- 品名 -->
            <TextView
                android:id="@+id/tv_partname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/font_black_one"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="规格:"
                android:textColor="@color/main_font_gray"
                android:textSize="13sp"/>

            <!-- 规格 -->
            <TextView
                android:id="@+id/tv_spec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/font_black_one"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- 第三排-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:text="材质:"
                android:textColor="@color/main_font_gray"
                android:textSize="13sp"/>

            <!-- 材质 -->
            <TextView
                android:id="@+id/tv_material"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/font_black_one"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="品牌/产地:"
                android:textColor="@color/main_font_gray"
                android:textSize="13sp"/>

            <!-- 品牌产地 -->
            <TextView
                android:id="@+id/tv_origin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/font_black_one"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- 第三排-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:text="交货地:"
                android:textColor="@color/main_font_gray"
                android:textSize="13sp"/>

            <!-- 交货地 -->
            <TextView
                android:id="@+id/tv_delivery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/font_black_one"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:id="@+id/tv_cunhuoliang"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="求购数量:"
                android:textColor="@color/main_font_gray"
                android:textSize="13sp"/>

            <!-- 求购数量 -->
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/font_black_one"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- 第四排-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:text="有效期:"
                android:textColor="@color/main_font_gray"
                android:textSize="13sp"/>

            <!-- 有效期 -->
            <TextView
                android:id="@+id/tv_validity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/main_imred"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:id="@+id/tv_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/biankuang"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="查看同类资源信息"
                android:textColor="@color/main_imred"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>