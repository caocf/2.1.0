<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/font_white_one"
    android:fitsSystemWindows="true"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true" 
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <include
            android:id="@+id/layout_head"
            layout="@layout/head_common_layout" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#E2E2E2"
                />


            <com.mysteel.banksteel.view.ui.CircleImageView
                android:id="@+id/iv_personalinfo_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/nophoto"
                />

            <LinearLayout
                android:id="@+id/ll_other_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_personalinfo_avatar"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/box_red_white_bg2"
                android:padding="7dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看TA的资源"
                    android:textColor="@color/main_imred"
                    />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="姓名"
                android:textColor="@color/font_black_two"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/et_personalinfo_nickname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:textColor="@color/font_black_two"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:paddingRight="10dp"
                android:src="@drawable/right_arrow"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="地区"
                android:textColor="@color/font_black_two"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_personalinfo_city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:textColor="@color/font_black_two"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:paddingRight="10dp"
                android:src="@drawable/right_arrow"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="业务区域"
                android:paddingLeft="15dp"
                android:textColor="@color/font_black_two"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_companyinfo_quyu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/font_black_two"
                android:textSize="16sp"
                android:text=""
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:src="@drawable/right_arrow"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="业务范围"
                android:textColor="@color/font_black_two"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_companyinfo_fanwei"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/font_black_two"
                android:textSize="16sp"
                android:text=""/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:src="@drawable/right_arrow"
                android:visibility="invisible" />
        </LinearLayout>


        <RelativeLayout 
           	android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            
            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/inside_gray_little"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="评价信息"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/inside_gray_little"
                    />
            </LinearLayout>
            
			<com.mysteel.banksteel.view.ui.XListView
				android:id="@+id/lv_listview"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
                android:layout_below="@+id/ll_title"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="false"
				android:scrollbars="none"
				/>
        </RelativeLayout>
      
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pb_progressbar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>

