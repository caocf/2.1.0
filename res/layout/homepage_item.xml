<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menu_imageView"
            android:layout_width="45dp"
            android:layout_height="45dp" 
            android:background="@drawable/my_order"/>
        
        <TextView
            android:id="@+id/tv_redpoint"
            android:layout_width="10dp"
            android:layout_height="10dp" 
            android:textColor="@color/font_white_one"
            android:layout_toRightOf="@+id/menu_imageView"
            android:gravity="center"
            android:textSize="10sp"
            android:visibility="gone"
            android:background="@drawable/redpoint"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/menu_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="3"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:text="菜单"
        android:textColor="#333333"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/arrow_imageView"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/right_arrow" />
    </LinearLayout>

   <!--  <FrameLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        >
    </FrameLayout> -->
</LinearLayout>